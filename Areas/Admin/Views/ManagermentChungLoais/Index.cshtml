@model IEnumerable<Petshop.Models.ChungLoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách chủng loại</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.ValidationSummary(true, "", new { @class="text-danger"})
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Loai.TenLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenChungLoai)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Loai.TenLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenChungLoai)
        </td>
        <td>
            <a href="/Admin/ManagermentChungLoais/Edit" class="btn btn-info"><span class="glyphicon-pencil"></span></a>
            <a href="/Admin/ManagermentChungLoais/Delete?id=@item.MaChungLoai" class="btn btn-danger" onclick="return confirm('Are you sure?')"><span class="glyphicon-remove-circle"></span></a>
           
        </td>
    </tr>
}

</table>
