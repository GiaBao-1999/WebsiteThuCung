<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Administrative Tool</title>
    <link href="~/Theme/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Theme/css/nhatnghe.css" rel="stylesheet" />
    <script src="~/Theme/js/jquery.min.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Theme/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <header class="nn-header">
            <h1 class="nn-company">Managerment Website</h1>
            <h5 class="nn-slogan">PET-SHOP</h5>
            <img class="nn-logo" src="~/Theme/images/header-object.png" />
        </header>
        <div class="navbar navbar-inverse">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Admin/NguoiQuanTri/Index" class="navbar-brand">Trang chủ</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Quản lý <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Admin/ManagermentThuCungs/Index">Sản phẩm</a></li>
                            <li><a href="/Admin/ManagermentChungLoais/Index">Chủng loại hàng</a></li>
                            <li><a href="/Admin/ManagermentLoais/Index">Loại hàng</a></li>
                            <li><a href="">Khách hàng</a></li>
                            <li><a href="">Đơn đặt hàng</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Thống kê<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="media-heading">Kiểm kê hàng tồn</li>
                            <li><a href="">Theo loại</a></li>
                            <li><a href="">Theo hãng</a></li>
                            <li class="media-heading">Thống kê doanh số</li>
                            <li><a href="">Theo từng mặt hàng</a></li>
                            <li><a href="">Theo từng loại hàng</a></li>
                            <li><a href="">Theo từng hãng</a></li>
                            <li><a href="">Theo từng khách hàng</a></li>
                            <li class="divider"></li>
                            <li><a href="">Theo từng năm</a></li>
                            <li><a href="">Theo từng quí</a></li>
                            <li><a href="">Theo từng tháng</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @using Petshop.Models
                        @{ 
                            NguoiQuanTri manager = (NguoiQuanTri)Session["Admin"];
                        }
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@manager.Username<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="">Đăng xuất</a></li>
                            <li><a href="">Đổi mật khẩu</a></li>
                            <li class="divider"></li>
                            <li><a href="">Quản lý tài khoản</a></li>
                            <li><a href="">Phân quyền</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

    <div class="nn-sheet">
        <article class="nn-body">
            @RenderBody()
        </article>

        <hr />
        <footer>
            <p>&copy; 2019 - ASP.NET</p>
        </footer>
    </div>
        </div>
    
</body>
</html>
