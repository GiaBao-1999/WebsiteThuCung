@model Petshop.Models.ThuCung
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-md-4">
            @Html.Partial("Loai")
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-sm-6">
                    <img src="~/Content/img/Pet/@Model.HinhAnh" width="200" height="250"/>
                </div>
                <div class="col-sm-6">
                    <ul class="list-unstyled">
                        <li>Tên: @Model.TenThuCung</li>
                        <li>Tuổi: @Model.Tuoi tháng </li>
                        <li>Màu lông: @Model.MauLong</li>
                        <li>Cân nặng: @Model.CanNang kg</li>
                        <li>Giống: @Model.ChungLoai.TenChungLoai</li>
                        <li>Giá: @Model.Gia VND</li>
                    </ul>
                    @Html.ActionLink("Mua", "Add", "Cart", new { ID = Model.MaThuCung }, new { @class="btn btn-warning"})
                </div>
            </div>
            <div class="row" style="margin-top:10px;">
                <div class="jumbotron">
                    <h4>Mô tả</h4>
                    <p>@Model.MoTa</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel">
                        <div class="row">
                            @foreach (var item in Model.ChungLoai.ThuCungs.Take(3).ToList())
                            {
                                <div class="col-sm-4">
                                    
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <img src="~/Content/img/Pet/@item.HinhAnh" width="190" height="200" />
                                            </div>
                                            <div class="panel-footer">
                                                @Html.ActionLink(item.TenThuCung, "Index", "Pet", new { ID = item.MaThuCung }, new { @class = "" })
                                            </div>
                                        </div>
                                    
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

