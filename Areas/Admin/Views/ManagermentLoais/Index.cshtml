@model IEnumerable<Petshop.Models.Loai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách loại sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.ValidationSummary(true, "", new { @class="text-danger"})
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th> Action </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            <a href="/Admin/ManagermentLoais/Edit" class="btn btn-info"><span class="glyphicon-pencil"></span></a>
            <a href="/Admin/ManagermentLoais/Delete?id=@item.MaLoai" class="btn btn-danger" onclick="return confirm('Are you sure?')"><span class="glyphicon-remove-circle"></span></a>
        </td>
    </tr>
}
</table>
