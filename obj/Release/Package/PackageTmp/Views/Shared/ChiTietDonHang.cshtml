@model int
@using Petshop.Models;
@{ 
    var db = new DataProvider();
    List<ChiTietDonHang> listbilldetail = db.ChiTietDonHangs.Where(x => x.MaDon == Model).ToList();
}
<table class="table table-striped table-hover">
    <tr>
        <th>Mã đơn hàng</th>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th>Giá</th>
    </tr>
    @foreach(ChiTietDonHang item in listbilldetail)
    {
        <tr>
            <td>@item.MaDon</td>
            <td>@item.ThuCung.TenThuCung</td>
            <td>@item.SoLuong</td>
            <td>@item.Gia</td>
           
        </tr>
    }
</table>
