@model IEnumerable<Petshop.Models.DonDatHang>
@{
    ViewBag.Title = "ViewBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Ngày đặt</th>
                    <th>Người đặt</th>
                    <th>Địa chỉ giao hàng</th>
                    <th>Tình trạng</th>
                    <th>Chi tiết</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.MaDon</td>
                        <td>@item.NgayDat</td>
                        <td>@item.KhachHang.HoTen</td>
                        <td>@item.DiaChi</td>
                        <td>@((bool)item.TrangThai?"Đã giao":"Chưa giao")</td>
                        <td>@Html.ActionLink("Chi tiết đơn hàng","ViewBill",new { MaDonHang = item.MaDon},new { @class="btn btn-info"})</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
                @if (ViewBag.madon != null)
                {
                    int madon = ViewBag.madon;
                    @Html.Partial("ChiTietDonHang", madon);
                }
        </div>
    </div>
</div>

