@model Petshop.Models.GioHang
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:20px;">
    @if (Model.Cart.Count > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thành tiền</th>
                        <th>Xóa</th>
                    </tr>
                    @foreach (var item in Model.Cart)
                    {
                        <tr>
                            <td>@item.MaSanPham</td>
                            <td>@item.TenSanPham</td>
                            <td>
                                <img src="~/Content/img/Pet/@item.HinhAnh" width="60" height="65" />
                            </td>
                            <td>
                                <form action="/Cart/Update" method="post">
                                    <input type="number" name="Unit" value="@item.SoLuong" class="form-control" />
                                    <input type="hidden" name="Id" value="@item.MaSanPham" />
                                    <input type="submit" value="Cập nhật" class="btn btn-default" />
                                </form>
                            </td>
                            <td>@item.Gia</td>
                            <td>@item.ThanhTien</td>
                            <td>@Html.ActionLink("Xóa", "Delete", "Cart", new { ID = item.MaSanPham }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info text-right">
                    Tổng tiền đơn đặt hàng: @Model.TongTien() VND
                    <a href="/Chekout/Index" class="btn btn-primary">Đặt hàng</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                   <h3>Bạn chưa chọn sản phẩm nào</h3>
                    @Html.ActionLink("Trang chủ","Index","Home")
                </div>
            </div>
        </div>
    }
</div>





